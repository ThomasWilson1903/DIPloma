<Window x:Class="DIPloma.Window.WdAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DIPloma.Window"
        mc:Ignorable="d"
        Title="Авторизация" Height="500" Width="450" MinHeight="500" MinWidth="450"
        
        >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <TextBlock MouseUp="xws" Text="Регистрация"
                           FontSize="20" HorizontalAlignment="Right" 
                           Margin="0,20,10,10"                           
                           />
        </Grid>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <TextBlock Text="Авторизация" FontSize="30" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment ="Center">
                <TextBlock Text="Login" FontSize="25" />
                <TextBox x:Name="TbLogin" FontSize="25" Width ="300" 
                         
                         HorizontalAlignment="Left"
                        
                         />
                <TextBlock Text="Password" FontSize="25" />

                <StackPanel >

                    <TextBox x:Name="tbPassword" FontSize="25" Width="300" 
                                 Visibility="Collapsed"  
                                 />
                    <PasswordBox x:Name="pbPassword" FontSize="25" Width="300" 
                                 Visibility="Visible" 
                                 
                                 />

                </StackPanel>

                <CheckBox Name="chVisPass" Checked="showPassChecked" Unchecked="hidePassChecked" 
                              Content="Показать пароль" HorizontalAlignment="Center" FontSize="17" 
                              />
                <Grid Height="62">
                    <Button x:Name="btSingIN" HorizontalAlignment="Left" 
                                Height="35"
                                Click="btRegistr" 
                                Margin="10,17,0,10"
                        Content="Sing In" 
                        FontSize="20" Width="100"  
                        >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>




            </StackPanel>
        </Grid>
    </Grid>
</Window>
