<Window x:Class="Wpf_core_diploma.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_core_diploma"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid Background="#222226">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="94*"/>
                <ColumnDefinition Width="437*"/>
                <ColumnDefinition Width="269*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                
            </Grid>
            

            <Grid Grid.Column="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Hidden">

                    <TextBlock x:Name="tbFIO" Text="Иванов Иван Иванович" Foreground="#E6E6E8" FontSize="15"/>

                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="200" Margin="25" Visibility="Visible" >
                    <Button x:Name="btRegister" Width="100" Content="Sing up"
                            Click="ClSingUp"
                            Background="#3C3C40" Foreground="#E6E6E8" >
                        <Button.Resources>
                            <Style TargetType="Border"
>
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button x:Name="btLogin" Width="100" Content="Sing in" 
                            Background="#0070E0" Foreground="#E6E6E8" 
                            Click="ClSingIn"
                            >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="15"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="FrMain"/>
        </Grid>
    </Grid>
</Window>
