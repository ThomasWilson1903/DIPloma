<Page x:Class="DIPloma.Pages.pgLvStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DIPloma.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1024"
      Title="pgLvStudent"
      Style="{StaticResource font}"
      >

    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="1" Opacity="0.4"/>
        </Grid.Effect>





        <Border 
                CornerRadius="7" ClipToBounds="True">
            <Border.Background>
                <SolidColorBrush Opacity="0.5" Color="#7C7C7C"/>
            </Border.Background>
            <Grid Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="252"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" CornerRadius="7" Margin="5" ClipToBounds="True" >

                    <Border.Background>
                        <SolidColorBrush Opacity="1" Color="#D9D9D9"/>
                    </Border.Background>

                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="65"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Width="222">
                            <TextBlock Text="Список учащихся 11 ”А”" FontSize="16" 
                               HorizontalAlignment="Left" Margin="0 5 0 0"/>
                            <Border CornerRadius="14" Height="25" Width="221" Margin="0 11 0 0">
                                <Border.Background>
                                    <SolidColorBrush Color="#656565" Opacity="1"/>
                                </Border.Background>
                                <StackPanel VerticalAlignment="Center">
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <TextBlock Text="Поиск" Margin="14 0 0 0" 
                                           FontSize="14" Foreground="#FFFFFF"/>
                                        <TextBox FontSize="14" Background="Transparent"
                                         BorderBrush="Transparent"
                                         Style="{StaticResource tboxTransperent}" Width="155"
                                         Foreground="#FFFFFF" Margin="3 0 0 0">

                                        </TextBox>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        <ListView x:Name="lvStudentLeft" Grid.Row="1" Background="Transparent" Style="{StaticResource listView}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="14" Height="25" Width="210" Margin="0 2 2 0" HorizontalAlignment="Center">
                                        <Border.Background>
                                            <SolidColorBrush Color="#022D73" Opacity="1"/>
                                        </Border.Background>

                                        <TextBlock  Text="{Binding SurnameStudent}" 
                                                    VerticalAlignment="Center" Margin="11 0 0 0"
                                                    Foreground="#FFFFFF"
                                                    FontSize="14"/>

                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>




                </Border>
                <Grid Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="46"/>
                        <RowDefinition Height="79*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="92*"/>
                            <ColumnDefinition Width="193"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" MouseUp="muSerch2" CornerRadius="7" Margin="5,5,5,5" ClipToBounds="True" >
                            <Border.Background>
                                <SolidColorBrush Opacity="1" Color="#D9D9D9"/>
                            </Border.Background>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0 0 0">
                                <TextBlock Text="Поиск" MouseUp="muSerch"/>
                                <TextBox x:Name="tboxSerch" Background="Transparent" 
                                     BorderBrush="Transparent" Width="5000" ClipToBounds="True" 
                                     FontSize="20" Style="{StaticResource tboxTransperent}" VerticalAlignment="Center">

                                </TextBox>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="1" CornerRadius="7" Margin="0,5,5,5" ClipToBounds="True"
                            
                            >
                            <Border.Background>
                                <SolidColorBrush Opacity="1" Color="#D9D9D9"/>
                            </Border.Background>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Март 2023 года" FontSize="20"/>

                            </StackPanel>
                        </Border>

                    </Grid>
                    <Grid Grid.Row="1">

                        <ListView x:Name="lvWeek"
                                  Background="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="7">

                                        <Border.Background>
                                            <SolidColorBrush Opacity="1" Color="#D9D9D9"/>
                                        </Border.Background>

                                        <StackPanel>
                                            <TextBlock Text="{Binding Date}"/>
                                            
                                            <!--doble ListView-->
                                            <ListView x:Name="lvJornalAccep">
                                                <ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border>
                                                            <Border.Background>
                                                                <SolidColorBrush Opacity="1" Color="#FFFFFF"/>
                                                            </Border.Background>

                                                            <TextBlock Text="{Binding }"/>

                                                        </Border>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </StackPanel>
                                        


                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>


                    </Grid>


                </Grid>


            </Grid>
        </Border>
    </Grid>
</Page>

