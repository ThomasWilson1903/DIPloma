<Application x:Class="DIPloma.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DIPloma"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="font">
            <Setter Property="TextElement.FontSize" Value="25"/>
            <Setter Property="TextElement.FontFamily" Value="Inter"/>
        </Style>
        
        <Style x:Key="fontTitle">
            <Setter Property="TextElement.FontSize" Value="25"/>
            <Setter Property="TextElement.FontFamily" Value="Inter"/>
            <Setter Property="TextElement.Foreground" Value="#022D73" />
        </Style>
        <!--style button main-->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0070E0" />
            <Setter Property="Foreground" Value="White" />
            
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="ButtonRadius" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>
        
        <!--textFocus-->
        <Style x:Key="textFocus" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#0070E0" />
            <Setter Property="FontSize" Value="17"/>
        </Style>
        <!--imageDefold-->
        <BitmapImage x:Key="photo" UriSource="/Resources/msedge_O3xG2PAYzg.png"/>
    </Application.Resources>
</Application>
    
    
